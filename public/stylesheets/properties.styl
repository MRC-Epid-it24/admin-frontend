/* Import CSS snippets */
@import 'snippets'

/* Import color variables */
@import 'variables'

.properties-container
	display none 
	padding 30px

	hr
		border none
		border-bottom #e1e1e1 1px solid

	.property
		margin-bottom 50px

		h3
			color dark-font-color
			font-size 20px
			padding-bottom 15px

		.input-wrapper
			display block
			margin-bottom 10px
			padding-left 0px

			label
				display inline-block
				font-size 13px
				margin-right 20px
				min-width 100px

			input, select, textarea
				border 1px solid #e1e1e1
				border-radius 6px
				min-width 200px

			input
				outline 0
				padding 8px 10px

			select
				height 36px
				width 220px
				outline 0

			textarea
				width 320px
				outline 0
				padding 8px 10px
	
	.property:last-child
		margin-bottom 0px