/* Import color variables */
@import 'variables'

/* Import CSS snippets */
@import 'snippets'

.search-field-wrapper
	background #f2f2f2
	border-bottom #e1e1e1 1px solid
	margin 0
	padding 5px 0 
	transition(all .2s ease-out)
	
	.search-field
		background transparent
		border transparent 1px solid
		border-radius 30px
		overflow hidden
		padding 0 0 0 20px
		position relative
		margin 0 auto
		width 16px
		transition(all .2s ease-out)
		
		i
			color #d9d9d9
			position absolute
			top 8px
			left 12px

		#search-field
			background transparent
			border none
			font-size 14px
			margin 0
			outline none
			padding 8px 15px
			width 308px

.search-field-wrapper.active
	padding 15px 0
	
	.search-field
		background white
		border #e1e1e1 1px solid
		margin 0 auto
		width 300px
		
			
		
#search-results
	ul
		margin 0
		padding 0 
		
		li
			background #f9f9f9	
			border-bottom #e1e1e1 1px solid
			border-left 3px solid transparent
			color #444
			padding 15px 12px
			transition(border .2s ease-out)
		
		li.active
			border-left 3px solid main-color
			background-color #f2f2f2
			
		li:hover
			background-color #f2f2f2
			cursor pointer