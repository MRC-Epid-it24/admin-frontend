/* Import color variables */
@import 'variables'

/* Import CSS snippets */
@import 'snippets'

.search-field-wrapper
	background light-grey
	border-bottom #e1e1e1 1px solid
	margin 0
	padding 0 
	transition(all .2s ease-out)
	
	.search-field
		border none
		overflow hidden
		padding 0 0 0 20px
		position relative
		margin 0 auto
		width 16px
		transition(all .2s ease-out)
		
		i
			color #d9d9d9
			position absolute
			top 15px
			left 10px

		#search-field
			background transparent
			border none
			font-size 14px
			margin 0
			outline none
			padding 15px 15px
			width 330px

.search-field-wrapper.active
	background white
	padding 0
	
	.search-field
		margin 0 auto
		width 330px
		
			
		
#search-results 
	display none
	&.visible
		display flex
	ul
		margin 0
		padding 0 
		width 100%
		li	
			border-bottom #efefef 1px solid
			border-left 3px solid transparent
			color #444
			font-size 16px 
			padding 15px 12px
			transition(border .2s ease-out)
		
		li.active
			border-left 3px solid main-color
			background-color light-grey
			
		li:hover
			background-color light-grey
			cursor pointer

.view-toggle
	background-color #3AF
	display none
	position fixed
	z-index 9
	width 100%
	@media(max-width: 800px)
		display block
	ul
		list-style none
		margin 0
		padding 0
		text-align center
		li
			color white
			display inline-block
			font-size 12px 
			line-height 50px
			margin 0
			padding 0
			width 100%
			&:hover
				background-color darken(main-color, 10%)
				cursor pointer

/* RTL Styles */

html[dir="rtl"]
	
	.search-field-wrapper
		.search-field
			padding 0 20px 0 0
			i
				left auto
				right 10px
			
	#search-results 
		ul	
			li	
				border-left none
				border-right 3px solid transparent
			li.active
				border-left none
				border-right 3px solid main-color