// Buttons

/* Import snippets */
@import 'snippets'

/* Import variables */
@import 'variables'

.btn
	background-color btn-default-color
	border 1px solid darken(btn-default-color, 5%)
	border-radius 2px
	float left
	font-size 13px
	margin 10px 10px 10px 0
	padding 12px 15px
	transition(all .1s linear)
	&:hover
		background-color darken(btn-default-color, 5%)
		cursor pointer
.success
	&:hover
		background-color darken(btn-success-color, 5%)
		border 1px solid darken(btn-success-color, 5%)
		color #FFF
.warning
	&:hover
		background-color darken(btn-warning-color, 5%)
		border 1px solid darken(btn-warning-color, 5%)
		color #FFF
.danger
	&:hover
		background-color darken(btn-danger-color, 5%)
		border 1px solid darken(btn-danger-color, 5%)
		color #FFF