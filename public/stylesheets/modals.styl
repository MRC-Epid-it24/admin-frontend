/* Import CSS snippets */
@import 'snippets'

/* Import color variables */
@import 'variables'

transition()
  -webkit-transition arguments
  -moz-transition arguments
  -o-transition arguments
  transition arguments
  
.modal
	background white
	border-radius 4px
	display none
	left 50%
	margin-left -300px
	overflow hidden
	position absolute
	text-align center
	top 200px
	width 600px
	z-index 13
	input
		border-radius 4px
		border 1px solid #e1e1e1
		display block
		font-size 15px 
		margin 0 auto 15px auto
		min-width 240px
		outline 0
		padding 15px 25px
		text-align center
	button
		background-color main-color
		border none
		border-radius 4px
		color #FFF
		font-size 16px
		margin-top 10px 
		padding 12px 30px
	button:hover
		background-color darken(main-color, 5%)
		cursor pointer
	button:active
		background-color darken(main-color, 10%)

	#button-close-modal
		line-height 50px
		position absolute
		top 0
		right 0
		height 50px
		text-align center
		width 50px

		i
			color #ccc
			font-size 1.4em
			line-height inherit
			transition(color .3s ease-out)

	#button-close-modal:hover
		cursor pointer
		i
			color red
	
	.modal-title
		font-size 28px 
		font-weight 100 
		height 100px
		line-height 100px 
		padding 0 50px
		text-align center
			
	.modal-content
		padding 0 30px 30px 30px

.modal.modal-narrow
	margin-left -200px
	width 400px
	
.modal.active
	display block

#modal-backdrop
	background-color rgba(0, 0, 0, 0.5)
	display none
	opacity 0
	position fixed
	top 0
	bottom 0
	left 0
	right 0
	z-index 11
	
#modal-backdrop.active
	display block