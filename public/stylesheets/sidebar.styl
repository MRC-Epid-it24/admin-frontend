// Sidebar

/* Import variables */
@import 'variables'

#sidebar-button
	display none
	position absolute
	top 0px
	left 0px
	transition(background .3s ease-out)

	i
		color white
		line-height 50px
		padding 0 15px

#sidebar-button:hover
	background-color darken(main-color, 10%)
	cursor pointer

.sidebar
	background-color sidebar-color
	bottom 0
	left 0
	overflow scroll
	padding-top 50px
	position absolute
	top 0
	width sidebar-width
	z-index 9
	transition(all .3s ease-out)

	ul
		list-style none
		margin 0
		padding 0

		li
			a
				border-left transparent 3px solid
				color white
				display block
				font-size 13px
				line-height 48px
				margin 0
				padding 0 60px 0 20px
				position relative
				text-decoration none
				white-space: nowrap;
				i
					font-size 11px
					line-height 48px
					position absolute
					right 10px
					top 0px
				
			a.active, a:hover
				border-left-color main-color
				cursor pointer
			.nested-li
				display none
			.nested-li li
				background-color lighten(sidebar-color, 5%)
			
			.nested-li li a:hover
				border-left-color #aaa
				
			&.active
				.nested-li
					display block 

@media (max-width: 1080px)
	.sidebar
		position fixed
		
@media (max-width: 800px)
	#sidebar-button
		display block

	.sidebar
		left - sidebar-width

	.sidebar.active
		left 0px