/* Import CSS snippets */
@import 'snippets'

/* Import color variables */
@import 'variables'
  
.drawer
	background white
	bottom 0
	display none
	right 0
	overflow scroll
	position fixed
	top 0
	width 600px
	z-index 12
	
	input
		border none
		padding 20px
		width 100%

	#button-close-drawer
		line-height 50px
		position absolute
		top 0
		right 0
		height 50px
		text-align center
		width 50px

		i
			color #ccc
			font-size 1.4em
			line-height inherit
			transition(color .3s ease-out)

	#button-close-drawer:hover
		cursor pointer
		i
			color red
	
	.drawer-title
		font-size 28px 
		font-weight 100 
		height 100px
		line-height 100px 
		padding 0 50px
		text-align center
			
	.drawer-content
		padding 0 30px 30px 30px
		
		.categories-container
			ul
				min-height 200px
				li
					border-left none
					&.selected
						border-left warning-color 3px solid 
	.drawer-footer
		background white
		border-top #e1e1e1 1px solid 
		padding 15px
		z-index 20 
		button
			margin-bottom 0 !important
			margin-top 0 !important
			
&.drawer-narrow
	width 400px
	
&.drawer-wide
	width 600px
	
&.no-padding
	.drawer-content
		padding 0
	
.drawer.active
	display block

#drawer-backdrop
	background-color rgba(0, 0, 0, 0.5)
	display none
	opacity 0
	position fixed
	top 0
	bottom 0
	left 0
	right 0
	z-index 11
	
#drawer-backdrop.active
	display block
	
@media(max-width:600px)
	
	.drawer
		left 0
		right 0  
		width 100% 
		.drawer-footer
			width 100%
			
/* RTL Styles */

html[dir="rtl"]
	
	.drawer
		left 0
		right auto
		#button-close-drawer
			left 0
			right auto
		.drawer-content
			.categories-container
				ul
					li
						border-left none
						border-right none
						&.selected
							border-left none
							border-right warning-color 3px solid