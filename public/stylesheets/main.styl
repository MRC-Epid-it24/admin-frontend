/* Import nib */
@import 'nib'

/* Import snippets */
@import 'snippets'

/* Import variables */
@import 'variables'

/* Grab custom fonts from Google */
@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,600,300')

/* Nib provides a CSS reset */
global-reset()

/* Override bootstrap's settings */

a
	color inherit
	&:focus, &:hover
		text-decoration none
		color inherit

html
	background-color light-grey

body
	font-family 'Open Sans','Helvetica Neue',Helvetica,Arial,sans-serif
	overflow-x hidden

body.modal-open
	overflow hidden

/* This snippet prevents bouncing but fails on small screen sizes
html, body
		height 100%
		overflow hidden

.intake-container
	position absolute
		top 0
		bottom 0
		left 0
		right 0
		overflow auto
*/

.hidden
	display none

header
	background-color rgba(255, 255, 255, 0.1)
	background-color main-color
	height 50px
	line-height 50px
	overflow hidden
	padding 0
	position fixed
	top 0
	left 0
	right 0
	z-index 10

	a
		text-decoration none
		h4
			color white
			font-size 18px
			font-weight 300
			padding 0 15px
			line-height 50px
			@media (max-width: 800px)
				font-size 15px
			strong
				font-weight 400

	a.auth-menu
		background-color main-color
		color white
		line-height 50px
		padding 0 20px
		position absolute
		right 0
		top 0
		transition(background .3s ease-out)

		i
			display none
			float left
			line-height inherit
			margin-right 8px

		p
			float left
			line-height inherit
			font-size 13px

	a.auth-menu.authenticated
		i
			display block

	a.auth-menu:hover
		background-color darken(main-color, 10%)
		cursor pointer
	a.auth-menu:active
		background-color darken(main-color, 25%)

.flash-message
	background #3AF
	color white
	height 50px
	line-height 50px
	opacity 1
	padding 0 50px
	position fixed
	text-align center
	top -50px
	z-index 1000
	left 0
	right 0
	transition(all 0.5s ease-in-out)
	#flash-dismiss-btn
		background-color rgba(0, 0, 0, 0.1)
		height 50px
		line-height 50px
		position absolute
		right 0
		text-align center
		top 0
		width 50px
	&.active
		opacity 1
		top 0
	&.success
		background-color flash-success-color
	&.warning
		background-color flash-warning-color
	&.danger
		background-color flash-danger-color

@media(max-width:568px)
	.flash-message
		padding 0 50px 0 0

.page-header
	padding 0 0 30px 0
	h2
		color main-color
		font-size 26px
		font-weight 100

.authenticated
	a.auth-menu
		i
			display block

#authenticate-overlay
	background-color main-color
	background-image url('../images/web.png')
	background-repeat no-repeat
	background-position bottom right
	background-size 40%
	display block
	opacity 1
	position fixed
	top 0
	bottom 0
	left 0
	right 0
	z-index 12
	@media(max-width:800px)
		background-size 70%
	transition(opacity .3s ease-out)
	#authenticate-logo
		padding 0 20px
		text-align center
		h4
			color white
			font-size 28px
			font-weight 300
			line-height 200px
			padding 0 15px
			strong
				font-weight 400

.authenticated
	#authenticate-overlay
		display none
		opacity 0

.main-content
	background-color light-grey
	padding-left sidebar-width

.col
	overflow auto
	padding-top 50px
	position absolute
	top 0
	bottom 0

#food-list-col
	background-color white
	width food-list-width

#properties-col
	background-color white
	border-left #e1e1e1 1px solid
	left (food-list-width + sidebar-width)
	right 0
	@media (max-width: 1080px)
		left food-list-width
#properties-col.fullwidth
	left sidebar-width

@media (max-width: 800px)
	.col
		position relative
		bottom auto
		top auto
		left auto
		right auto
		width 100%

	#food-list-col
		width 100%

	#properties-col
		left 0
		padding-top 0
	#properties-col.fullwidth
		left 0
		padding-top 50px

@media (max-width: 1080px)
	.main-content
		padding-left 0px

	header

		h4
			margin 0 50px
			text-align center

		a.auth-menu
			p
				display none
			i
				display block
				margin-right 0

input
	&.valid
		border-color border-valid-color !important
	&.invalid
		border-color border-invalid-color !important


/* Sortable */

.categories-container
	overflow scroll
	input
		background #f9f9f9
		border #e1e1e1 !important
		font-size 15px
		font-weight 300
		outline 0
		padding 15px 20px
		width 100%

		-webkit-box-sizing: border-box;
		-moz-box-sizing: border-box;
		box-sizing: border-box;
	ul
		list-style-type none
		margin 0
		padding 0

		li
			border-left #e1e1e1 3px solid
			height 50px
			line-height 50px
			margin 0
			padding 0 15px
			white-space nowrap
			&:hover
				background #f9f9f9
				cursor pointer
			&.selected
				background #f9f9f9
				border-left warning-color 3px solid
			span
				position absolute

.modal
	.categories-container
		li
			margin 0

.drawer
	.list-container
		overflow scroll
		input
			background #f9f9f9
			border #e1e1e1 !important
			font-size 15px
			font-weight 300
			outline 0
			padding 15px 20px
			width 100%
			-webkit-box-sizing: border-box;
			-moz-box-sizing: border-box;
			box-sizing: border-box;
		ul
			list-style-type none
			margin 0
			padding 0
			li
				height 50px
				line-height 50px
				margin 0
				padding 0 20px
				&:hover
					background #f9f9f9
					cursor pointer
				&.selected
					background #f9f9f9
				span
					position absolute

/* RTL Styles */

html[dir="rtl"]
	header
		a.auth-menu
			left 0
			right auto
			i
				float right
				margin-left 8px
				margin-right auto
			p
				float right
	.flash-message
		#flash-dismiss-btn
			left 0
			right auto
	@media(max-width:568px)
		.flash-message
			padding 0 0 0 50px
	.main-content
		padding-left 0
		padding-right sidebar-width
	#properties-col
		border-left none
		border-right #e1e1e1 1px solid
		left 0
		right (sidebar-width + food-list-width)px
		@media (max-width: 1080px)
			right food-list-width
		@media (max-width: 800px)
			right auto
	#properties-col.fullwidth
		left 0
		right sidebar-width
	@media (max-width: 1080px)
		.main-content
			padding-left 0px
			padding-right 0px
		header
			a.auth-menu
				i
					margin-left 0
					margin-right auto
	.categories-container
		ul
			li
				border-left none
				border-right none
				&.selected
					border-right warning-color 3px solid

.margin-bottom-sm
	margin-bottom 10px
