@import "_variables.styl"

editable
  .editable
    position relative

    &.empty
      display inline-block
      min-width 5px
      height 1em

    &-icon
      $size = 0.8em
      font-size $size
      position absolute
      bottom ($size * 0.5)
      right -($size * 1.5)
      opacity 0
      transition opacity $transition

      &.ng-hide
        opacity 0

    &:hover
      .editable-icon:not(.ng-hide)
        opacity 1

    &-placeholder
      opacity 0.7
      border-bottom 1px solid

      &.error
        $error-color = lighten($color-red, 30%)
        opacity 1
        color $error-color
        border-bottom-color $error-color

    &-disabled
      opacity 0.7

