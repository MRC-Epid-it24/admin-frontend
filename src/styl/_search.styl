/* Import color variables */
@import '_variables'

/* Import CSS snippets */
@import '_snippets'

$search-border-bottom = $subgroup-border-color 1px solid;

.search-field-wrapper
  background light-grey
  border-bottom $search-border-bottom
  margin 0
  padding 0
  transition(all .2s ease-out)

  .search-field
    border none
    overflow hidden
    padding 0 0 0 20px
    position relative
    margin 0 auto
    width 30px
    transition(all .2s ease-out)

    i
      color #d9d9d9
      position absolute
      top 15px
      left 10px

    input
      background transparent
      border none
      font-size 14px
      margin 0
      outline none
      padding 15px 15px
      width 100%

.search-field-wrapper
  &:hover
  &:focus
  &.active
    background white
    padding 0

    .search-field
      margin 0 auto
      width 100%

#search-results
  display none
  &.visible
    display flex
  ul
    margin 0
    padding 0
    width 100%
    li
      border-bottom #efefef 1px solid
      border-left 3px solid transparent
      color #444
      font-size 16px
      line-height 1.5em
      padding 15px 12px
      transition(border .2s ease-out)

    li.active
      border-left 3px solid main-color
      background-color light-grey

    li:hover
      background-color light-grey
      cursor pointer

search-input
  width 100%

.search-input
  &-group
    search-input
      display table-cell
  &-addon
    display table-cell
    border-left $search-border-bottom
    border-bottom $search-border-bottom

    button
      height 46px
      width 50px
      background light-grey
      border-color transparent
      transition background $transition
      outline none

      &:hover
      &:focus
      &.active
        background white

.view-toggle
  background-color #3AF
  bottom 10px
  border-radius 25px
  display block
  left 50%
  margin-left -25px
  position fixed
  z-index 9
  text-align center
  width 50px
  &.inactive
    display none !important
  @media (min-width: 800px)
    display none !important
  i
    color white
    font-size 12px
    line-height 50px
    margin 0
    padding 0
    width 100%
    i
      margin 0 10px
    &:hover
      background-color darken(#3AF, 10%)
      border-radius 25px
      cursor pointer

/* RTL Styles */

html[dir="rtl"]

  .search-field-wrapper
    .search-field
      padding 0 20px 0 0
      i
        left auto
        right 10px

  #search-results
    ul
      li
        border-left none
        border-right 3px solid transparent
      li.active
        border-left none
        border-right 3px solid main-color