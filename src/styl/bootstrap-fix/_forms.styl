@import "../_variables.styl"

.control-label
.form-control-static
.checkbox-inline
  font-size $form-font-size

.checkbox
.checkbox-inline
  input[type="checkbox"]
    margin-top 1px

.form-subgroup
  $side-padding = 20px
  $border-radius = 4px
  border $subgroup-border-color 1px solid
  border-radius $border-radius
  background $subgroup-background-color
  margin-bottom 10px
  max-width 700px
  padding 10px $side-padding
  margin-left -($side-padding)