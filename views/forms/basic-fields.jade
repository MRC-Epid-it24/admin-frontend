.input-wrapper
	label #{ gettext("Description") }
	input(class='input-english-description' type='text' placeholder='#{ gettext("e.g. Beans on toast") }' ng-model='itemDefinition.englishDescription')
.input-wrapper(ng-hide='SharedData.locale.intake_locale=="en_GB"')
	label #{ gettext("Local Description") }
	input(class='input-local-description' type='text' ng-model='localDescriptionModel' ng-model-options='{ getterSetter : true }')
.input-wrapper
	label #{ gettext("Intake24 code") }
	input(class='input-intake-code' type='text' placeholder='#{ gettext("ALBU") }' ng-model='itemDefinition.code' ng-keyup='checkCode($event)')
.input-wrapper
	label #{ gettext("properties_use_exclusively_in_this_locale") }
	input(type='checkbox' ng-model='itemDefinition.useExclusivelyInThisLocale')
.input-wrapper
	label #{ gettext("properties_do_not_use_in_this_locale") }
	input(type='checkbox' ng-model='itemDefinition.localData.doNotUseInThisLocale')
