.property(ng-controller="CategoriesController")
	h3 #{ gettext("Categories") }
	.categories-container
		ul(ng-repeat='category in $parent.parentCategories | orderBy:"displayName"')
			li {{category.displayName}}

	.input-wrapper
		button.intake-btn.success(type="button" ng-click='showParentCategoriesDrawer()')
			span #{ gettext("Manage categories") }
		.clearfloat
