//- Incomplete

.input-wrapper
	label #{ gettext("Serving image set") }
	.inline-link(onClick='showDrawer("drawer-served-image-set")') 
		{{ SharedData.selected_serving_image_set.description }}
.input-wrapper
	label #{ gettext("Use leftover images") }
	input(type='checkbox' ng-model='portionSize.useLeftoverImages')
.input-wrapper
	label #{ gettext("Leftover image set") }
	.inline-link(onClick='showDrawer("drawer-leftovers-image-set")') 
		{{ SharedData.selected_leftovers_image_set.description }}

.btn.danger
	span #{ gettext("Delete this method") }
.clearfloat

//- Drawers

.drawer.drawer-narrow.no-padding.animated#drawer-served-image-set
	#button-close-drawer.button-close-drawer
		i.fa.fa-times
	.drawer-title #{ gettext("Select Image Set") }
	.drawer-content
		.list-container
			ul
				li(ng-click='setImageSet(as_served_image_set.id, "serving", portionSize)' ng-model='SharedData.portionSizes.as_served_image_sets' ng-repeat='as_served_image_set in SharedData.portionSizes.as_served_image_sets')
					{{ as_served_image_set.description }}

.drawer.drawer-narrow.no-padding.animated#drawer-leftovers-image-set
	#button-close-drawer.button-close-drawer
		i.fa.fa-times
	.drawer-title #{ gettext("Select Image Set") }
	.drawer-content
		.list-container
			ul
				li(ng-click='setImageSet(as_served_image_set.id, "leftovers", portionSize)' ng-model='SharedData.portionSizes.as_served_image_sets' ng-repeat='as_served_image_set in SharedData.portionSizes.as_served_image_sets')
					{{ as_served_image_set.description }}