.property
	h3 #{ gettext("Food definition") }
	.input-wrapper
		label #{ gettext("Description") }
		input(id='input-food-englishDescription', type='text', placeholder='#{ gettext("Beans on toast") }')
	.input-wrapper
		label #{ gettext("Intake24 code") }
		input(id='input-food-code' type='text', placeholder='#{ gettext("ALBU") }')
	.input-wrapper
		label #{ gettext("NDNS code") }
		input(id='input-NDNS-code' type='text', placeholder='10968')
	.input-wrapper
		label #{ gettext("Food group") }
		select(id='food-group-dropdown')
			option #{ gettext("Other vegetables") }

.property
	h3 #{ gettext("Attributes") }
	.input-wrapper
		label #{ gettext("Ready meal option") }
		<input id="input-ready-meal-option" type="checkbox" value="" checked="checked">
	.input-wrapper
		label #{ gettext("Same as before option") }
		<input id="input-same-as-before-option" type="checkbox" value="" checked="checked">
	.input-wrapper
		label #{ gettext("Reasonable amount (g/ml)") }
		input(id='input-reasonable-amount' type='text', placeholder='#{ gettext("600") }', style='min-width:60px; width:60px')

.property
	h3 #{ gettext("Categories") }
	.input-wrapper
		textarea(rows='4', placeholder='#{ gettext("Enter categories") }')
	.input-wrapper
		.btn.success#add-food-to-category-btn
			span #{ gettext("Add to category") }
		.btn.danger
			span #{ gettext("Remove from selected category") }
		.clearfloat

.property
	h3 #{ gettext("Portion size estimation") }