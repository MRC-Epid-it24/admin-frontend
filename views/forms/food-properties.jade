form(id='food-properties-form')
.property
	h3 #{ gettext("Definition") }
	include basic-fields
	.input-wrapper(ng-repeat='nutrientTable in itemDefinition.localData.nutrientTableCodes')
		label {{ nutrientTable.id }}
		input(id='input-{{ nutrientTable.id }}-code' type='text' placeholder='#{ gettext("e.g. 10968") }' ng-model='itemDefinition.localData.nutrientTableCodes[nutrientTable.id]')
	.input-wrapper
		label #{ gettext("Food group") }
		select(class='food-group-dropdown' id='food-group-dropdown' data-ng-options="fg.id as fg.displayName for fg in foodGroups" data-ng-model="itemDefinition.groupCode")

include inheritable-properties

include parent-categories

include portion-size
