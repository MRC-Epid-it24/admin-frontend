.property
    h3 #{ gettext("Nutrient codes") }

    .input-wrapper(ng-repeat='(id, code) in itemDefinition.localData.nutrientTableCodes')
        label {{ id }}
        input(id='input-{{ id }}-code' type='text' placeholder='#{ gettext("e.g. 10968") }' ng-model='itemDefinition.localData.nutrientTableCodes[id]')
        button.intake-btn.no-float(ng-click="nutrientCodeSection.removeTable(id)")
            i(class="fa fa-remove")

    .input-wrapper(ng-hide="nutrientCodeSection.buttonDisabled()")
        .intake-dropdown(ng-class="{open: nutrientCodeSection.dropDownOpened}")
            button.intake-btn(ng-click="nutrientCodeSection.toggleDropDown()")
                span #{ gettext("add_nutrient_code") }
                i(class="fa fa-caret-down")
            ul.intake-dropdown-menu
                li(ng-repeat="item in nutrientCodeSection.filteredTables()")
                    a(href="" ng-click="nutrientCodeSection.addTable(item.id)")
                        span {{item.id}}