block vars

doctype
html(lang='#{lang}' dir='#{lang_dir}')

    head
        title #{title} - #{ gettext("Intake24 Admin") }

        meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no')

        link(rel='stylesheet', href='/style.css')

        script(type="text/javascript").
            window.intake24_locale = '#{intake24_locale}';

        //- Load current translation file
        script(type="text/javascript" src='/i18n/#{lang}/messages.js')
        script(type="text/javascript" src='/intake24-admin.js')

    body(ng-app='#{ngAppName}' ng-controller='AdminController' ng-class="{authenticated: authenticated}")
        header
            #sidebar-button(ng-click="sidebarToggle()")
                i.fa.fa-bars
            a(href='/' class="no-text-decoration")
                h4 <strong>Intake24</strong> Admin
            a(href='#' class='intake-btn-modal' id='btn-authenticate' ng-click="goToLogout()").auth-menu
                i.fa.fa-user
                p {{authUsername || 'Login / Register'}}

        .intake-container
            .main-content
                block content

            block sidebar

        include modals

        .flash-message(class="{{class}}" ng-controller="MessagesController" ng-class="{active: visible}")
            div {{message}}
            #flash-dismiss-btn(ng-click='hide()')
                i(class='fa fa-close')

        #authenticate-overlay
            #authenticate-logo
                h4 <strong>Intake24</strong> Admin
