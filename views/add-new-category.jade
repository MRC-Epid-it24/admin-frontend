.properties-container#add-new-category-container

	.properties-padding
		
		.page-header
			h2 #{ gettext("Add new category") }

		include forms/category-properties

	.properties-footer
		.input-wrapper
			.intake-btn.success(ng-click='addCategory()')
				span #{ gettext("Add category") }
			.intake-btn.danger(ng-click='returnHome()')
				span #{ gettext("Cancel") }
			.clearfloat
