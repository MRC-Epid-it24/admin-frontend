a(ng-click='value.open = !value.open; nodeSelected($event, value)')
	i(class='fa fa-caret-down fa-fw' ng-if='value.type == "category"')
	i(class='fa fa-caret-right fa-fw' ng-if='value.type == "category"')
	i(class='fa fa-fw' ng-class='(value.type == "food") ? "fa-circle-o" : "fa-circle"')
	{{ value.englishDescription }}
ul(ng-if='value.children' ng-model='SharedData.treeData')
	li(ng-repeat='(index, value) in value.children | orderBy:["type", "englishDescription"]' ng-include='"node"')