.sidebar(ng-class='{"active": $parent.sidebaropen}' ng-controller='NavigationController')
	ul
		li.sidebar-btn(ng-class="{'active': menuItemsState.setLocale}")
			a(ng-click='toggleItem("setLocale")')
				| #{ gettext("sidebar_food_explorer") }
				i.fa(ng-class="menuItemsState.setLocale ? 'fa-chevron-down' : 'fa-chevron-left'")
			ul.nested-li
				li(ng-repeat='(index, value) in locales | orderBy:["localName"]' class='sidebar-btn' ng-click='setLocale(value.id, value.adminLanguage)')
					a(ng-class='{"active": currentLocale == value.id}')
						i.flag(ng-class='value.flagCode')
						| &nbsp;{{ value.localName }}


		li.sidebar-btn(ng-class="{'active': menuItemsState.galleries}")
			a(ng-click='toggleItem("galleries")')
				| #{ gettext("Galleries") }
				i.fa(ng-class="manage_categories_active ? 'fa-chevron-down' : 'fa-chevron-left'")
			ul.nested-li
				li.sidebar-btn()
					a(href="/image-gallery#/main") #{ gettext("image_gallery_main_gallery") }
				li.sidebar-btn()
					a(href="/image-gallery#/as-served") #{ gettext("image_gallery_as_served") }