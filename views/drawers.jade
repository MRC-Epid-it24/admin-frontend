.drawer.drawer-narrow.no-padding.animated#drawer-manage-categories(ng-controller='CategoryManagerController')
	#button-close-drawer.button-close-drawer
		i.fa.fa-times
	.drawer-title #{ gettext("Manage Categories") }
	.drawer-content
		.categories-container
			input(type='text' ng-model='searchQuery' ng-model-options='{getterSetter : true}' placeholder='#{ gettext("Search categories") }')
			ul(ng-if="searchQuery()")
				li(ng-repeat='category in searchResults | orderBy:"displayName"' ng-click='toggleParentCategory(category)' ng-class='isInParentCategories(category) ? "selected" : "unselected"') {{category.displayName}}
			ul(ng-if="!searchQuery()")
				li(ng-repeat='category in fixedCategories | orderBy:"displayName"' ng-click='toggleParentCategory(category)' ng-class='isInParentCategories(category) ? "selected" : "unselected"') {{category.displayName}}

	.drawer-footer
		button(class="intake-btn success drawer-form-button button-close-drawer close-drawer" ng-click='reloadCategories()') #{ gettext("Done") }
		.clearfloat

//- Image set selection drawer

.drawer.drawer-narrow.no-padding.animated#drawer-as-served-image-set(ng-controller='AsServedSetController')
	#button-close-drawer.button-close-drawer
		i.fa.fa-times
	.drawer-title #{ gettext("Select Image Set") }
	input(type='text' ng-model='query' placeholder='#{ gettext("Search image sets") }')
	.drawer-content
		.list-container
			ul
				li(ng-click='setAsServedImageSet(as_served_image_set.id)' ng-repeat='as_served_image_set in asServedImageSets | asServedFilter:query | orderBy:description')
					{{ as_served_image_set.description }} ({{ as_served_image_set.id }})

//- Guide image selection drawer

.drawer.drawer-narrow.no-padding.animated#drawer-guide-image(ng-controller='GuideImageController')
	#button-close-drawer.button-close-drawer
		i.fa.fa-times
	.drawer-title #{ gettext("Select Guide Image") }
	input(type='text' ng-model='query' placeholder='#{ gettext("Search guide images") }')
	.drawer-content
		.list-container
			ul
				li(ng-click='setGuideImage(guide_image_set.id)' ng-model='guideImages' ng-repeat='guide_image_set in guideImages | guideImageFilter:query | orderBy: "id"')
					{{ guide_image_set.id }} ({{ guide_image_set.description }})

